<div class="container">
  <div class="row">
    <h1>{{ page.title }}</h1>
  </div>




{% form 'contact' %}

{% if form.posted_successfully? %}
  <div class="alert alert-success">
 Thank you for your contact 
</div>
{% endif %}
<div class="alert alert-danger">
  {{ form.errors | default_errors }}
</div>

  <div class="row">
    <div class="col-12 col-md-6">
      <label for="ContactFormName">name</label>
      <input class="form-control" type="text" id="ContactFormName" name="contact[name]">
    </div>
    <div class="col-12 col-md-6">
      <label for="ContactFormEmail">email</label>
      <input class="form-control" type="email" id="ContactFormEmail" name="contact[email]">
    </div>
  </div>
  
<div class="row">
  <div class="col">
      <label for="ContactFormOrder">order #</label>
      <input class="form-control" type="number" id="ContactFormOrder" name="contact[order]">
    </div>
  </div>
  <div class="col">
    <label for="ContactFormPhone">phone</label>
    <input class="form-control" type="tel" id="ContactFormPhone" name="contact[phone]">
  </div>
</div>
<div class="col">
  <label for="ContactFormMessage">message</label>
  <textarea class="form-control" rows="10" id="ContactFormMessage" name="contact[body]"></textarea>
</div>


  <input class="btn-success btn w-100 mt-2" type="submit" value="send">
{% endform %}
</div>
