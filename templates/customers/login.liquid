<!-- /templates/customers/login.liquid -->
<div class="container my-5 py-5">
  <div class="login-form">
    <div class="h3">Customer Login</div>
    {% form 'customer_login' %}
    {% include 'form-error', form:form %}

    <label for="emailAddress">Email Address</label>
    <input type="email" name="customer[email]" class="form-control rounded-0 my-2">
    <label for="password">Password</label>
    <input type="password" name="customer[password]" class="form-control rounded-0 my-2">

    <input type="submit" value="Sign in" class="btn btn-primary btn-lg w-100 rounded-0">
    {% endform %}
    <a href="#recover" class="text-center">Forgot your password?</a>
  </div>
  <div class="forgot-password-form d-none">
    {% form 'recover_customer_password' %}
    {% include 'form-error', form:form %}
    <div class="col-12">
      <label for="resetpassword" class="form-labe">Email Address</label>
      <input type="email" name="email" id="resetpassword">
    </div>
    <input type="submit" value="Reset Password">
    {% endform %}
  </div>
</div>
