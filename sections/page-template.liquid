{% if section.settings.container == 'container' %}
    {% assign container_class = 'container' %}
    {% else %} 
    {% assign container_class = 'container-fluid' %}
{% endif %}
    <div class="page-template">
        {% schema %}
            {
        "name": "page settings",
        "settings": [
            {
                "type":"select",
                "id":"container",
                "label":"layout",
                "option":[
                    {
                        "value":"container",
                        "label":"container"
                    },
                    {
                        "value":"container-fluid",
                        "label":"container-fluid"
                    }
                ],
                "default":"container"
            }
            
            ]
    }
        {% endschema %}
        
        <h1>{{ page.title }}</h1>
        <div>{{ page.content }}</div>
      </div>
      