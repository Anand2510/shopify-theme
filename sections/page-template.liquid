{% schema %}
    {
        "name": "page settings",
        "settings": [
            {
                "type":"select",
                "id":"container",
                "label":"layout",
                "options":[
                    {
                        "value":"container",
                        "label":"container"
                    },
                    {
                        "value":"container-fluid",
                        "label":"container-fluid"
                    }
                ],
                "default":"container"
            }
        ]
    }
    {% endschema %}
    
    {% assign container_class = 'container' %}
    {% if section.settings.container == 'container-fluid' %}
        {% assign container_class = 'container-fluid' %}
    {% endif %}
    
    <div class="page-template">

        <div class="{{ container_class }} my-5">
            <h1>{{ page.title }}</h1>
            <small>{{ page.published_at | date: '%B %d, %Y' }}</small>
            <div class="my-5">{{ page.content }}</div> 
        </div>
    </div>
    