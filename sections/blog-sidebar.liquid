<div class="siderbar-section">
    {% for block in section.blocks %}
        {%  assign item = block.settings  %} 

        {% if block.type == 'image' %}
            <div class="mb-4">
                <p>{{ item.image_text }}</p>
               <a href="{{ item.img_link }}"><img class="w-100" src="{{ item.image |  img_url: 'medium' }}" alt="{{ item.image.alt }}"></a> 
            </div>
            {%  else %}
            <div class="mb-4">
                <h2>{{ item.title }}</h2>
                <p> {{ item.description }} </p>
            </div>
        {% endif %}

    {% endfor %}
</div>


{%  schema  %}  
{
    "name":"Blog",
    "settings": [],
    "blocks": [
        {
            "name": "Blog Item",
            "type": "image",
            "settings": [
                {
                    "type": "text",
                    "id": "image_text",
                    "label": "Heading",
                    "default": "Heading"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label":"Image"
                },
                {
                    "type": "url",
                    "id": "img_link",
                    "label": "Links"
                }
            ]
        },
        {
            "name": "side bar text",
            "type": "text",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Sidebar Title"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label":"Descriptions"
                }
            ]
        }
    ]
}
{% endschema %} {