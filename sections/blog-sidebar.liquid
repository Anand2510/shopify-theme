<div class="siderbar-section">
    {% for block in section.blocks %}
        {%  assign item = block.settings  %} 
        <div class="mb-4">
            <p>{{ item.image_text }}</p>
           <a href="{{ item.img_link }}"><img src="{{ item.image |  img_url: 'medium' }}" alt="{{ item.image.alt }}"></a> 
        </div>

    {% endfor %}
</div>


{%  schema  %}  
{
    "name":"Blog",
    "settings": [],
    "blocks": [
        {
            "name": "Blog Item",
            "type": "image",
            "settings": [
                {
                    "type": "text",
                    "id": "image_text",
                    "label": "Heading",
                    "default": "Heading"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label":"Image"
                },
                {
                    "type": "url",
                    "id": "img_link",
                    "label": "Link"
                }
            ]
        }
    ]
}
{% endschema %} 