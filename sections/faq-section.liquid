<div class="container">
    <div class="accordion accordion-flush" id="accordionFAQ">
        {%  for block in section.blocks  %}
            <div class="accordion-item">
                <button class="accordion-button collapsed" type="button"
                data-base-toggle="collapse"
                data-base-target="{{ block.id }}"
                aria-expanded="false"
                aria-controls="{{ block.id }}"
                >
                <h2 class="accordion-header" id="{{ block.id }}">{{ block.settings.title }}</h2>
                </button>
                
                <div class="accordion-colapse colapse"
                id="{{ block.id }}"
                aria-labelledby="{{ block.id }}"
                data-bs-parent="#accordionFAQ"
                >
                {{ block.settings.answer }}
                </div>
            </div>
        
        {% endfor %} 
    </div>
</div>

{% schema %}
{
    "name": "FAQS New",
    "settings": [
        
        ],
        "blocks": [
            {
                "name": "faq item",
                "type": "faq",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Quetion",
                        "default": "Faq Title Example"
                    },
                    {
                        "type": "richtext",
                        "id": "answer",
                        "label": "Answer"
                    }
                ]

            }
        ],
        "presets":[
            {
                "name": "Faq New"
            }
        ]

}
{% endschema %} 