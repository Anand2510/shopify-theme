<div class="text"></div>
<div class="container mb-5">
    <div class="row my-4">
        <h2 class=" text-center">custom faq section {{ page.title }}</h2>
    </div>
    <div class="accordion accordion-flush" id="accordionFAQ">
        {%  for block in section.blocks  %}
            <div class="accordion-item">
                <h2 class="accordion-header" id="collapse-header-{{ block.id }}">  
            <button class="accordion-button collapsed" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapse-{{ block.id }}"
                aria-expanded="false"
                aria-controls="{{ block.id }}"
                >
                {{ block.settings.title }}
                </button>
                </h2>
                <div class="accordion-collapse collapse p-3"
                id="collapse-{{ block.id }}"
                aria-labelledby="collapse-header-{{ block.id }}"
                data-bs-parent="#accordionFAQ"
                >
                {{ block.settings.answer }}
                </div>
            </div>
        
        {% endfor %} 
    </div>
</div>

{% schema %}
    {
      "name": "FAQ Section",
      "settings": [
        {
          "type": "text",
          "id": "faq_title",
          "label": "FAQ Title",
          "default": "Frequently Asked Questions"
        }
      ],
      "blocks": [
        {
          "type": "faq",
          "name": "FAQ Block",
          "settings": [
            {
              "type": "text",
              "id": "question",
              "label": "Question"
            },
            {
              "type": "textarea",
              "id": "answer",
              "label": "Answer"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "FAQ",
          "category": "Custom"
        }
      ]
    }
    {% endschema %}
    