{% comment %}
  {% unless section.settings.disabled %}
{% endcomment %}

<section class="container">
  {% for product in collections[section.settings.feature_collection].products %}
    <div class="card">
        <img src="{{ product.featured_media.preview_image | img_url: 'medium' }}" alt="{{ product.title }}">
     <div class="card-body">
      <h3> <a href="{{ product.url }}">{{ product.title }}</a></h3>
      <p>{{ product.price | money_without_trailing_zeros }}</p> 
    </div>
    </div>
  {% endfor %}
</section>

{% comment %}
  {% endunless %}
{% endcomment %}

{% schema %}
{
    "name": "Feature Collection",
    "class": "featured-collection-section",
    "settings": [
        {
            "type": "collection",
            "id": "feature_collection",
            "label": "Collection"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Feature Collection",
            "label": "Title"
        }
    ],
    "presets": [
        {
            "category": "Collection",
            "name": "Feature Collection"
        }
    ]
}
{% endschema %}
