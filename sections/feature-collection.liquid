<section class="container">
    {{ section.settings.title }}
    <div class="card-flex d-flex flex-wrap">
    {%  for product in collections[section.settings.featute_collection].products %}
        <div class="card" style="width: 18rem;">
            <img src="{{ product.featured_media.preview_image |  img_url: 'medium' }}" alt="{{ product.title }}">
            <div class="card-body">
            <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
            <p>{{ product.price |  money_with_currency}}</p> 
            </div>
        </div>
     {% endfor %}
     </div>
</section>

{%  schema  %} 
{
    "name":"Feature Collection",
    "class": "feature-collection-section",
    "settings": [
        {
            "type": "collection",
            "id": "featute_collection",
            "label": "Feature Collection",

        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default":"Feature COllection"
        }
    ],
    "presets": [
        {
                "category":"Collection",
                "name": "Feature Collection"
        }
    ]
}
{% endschema %} 