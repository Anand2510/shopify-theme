{% comment %} <section class="container py-5">
    <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1>This example now</h1>
            <h1>{{ section.settings.title }}</h1>
             <h1>This Example now</h1>
            <p>{{ section.settings.description }}</p>
            <a href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
        </div>
    </div>
</section> {% endcomment %}
{% if section.settings.enable_section %}
    <section class="section-class">
      <div class="container">
        <h2>{{ section.settings.title }}</h2>
        <p>{{ section.settings.description }}</p>
        <!-- Add other content as needed -->
      </div>
    </section>
  {% endif %}
  
{% schema %}
{
    "name": "Hero",
    "class": "hero-section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Example Heading",
            "label": "Heading Title"
        },
        {
            "type": "richtext",
            "id": "description",
            "default": "<p>Example Paragraph</p>",
            "label": "Heading Description"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Button",
            "label": "Heading Button"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Heading Button Link"
        }
    ],
    "presets": [
        {
            "category": "Hero",
            "name": "Hero"
        }
    ]
}
{% endschema %}
